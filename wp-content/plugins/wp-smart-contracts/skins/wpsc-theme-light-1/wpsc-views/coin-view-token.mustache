	    <div class="content">

		  <h3 class="ui block header coin-header coin-header-black">
		    	<img class="tiny ui circular image" src="{{blockie}}">
				{{{token-name}}} ({{{token-symbol}}})
		  </h3>

	      <div class="extra content">
	  
	        <div class="ui">

			  <div class="ui medium {{color}} label fluid coin-btn uppercase margin-bottom left-align">
				  <i class="{{icon}} icon"></i>{{ethereum-network}}
			  </div>
				<div class="clearfix"></div>

			  {{{token-info}}}

	        </div>
	  
	      </div>

	    </div>
	  
	  </div>
{{/contract-exists}}
