<p class="wps-centered">{{banner-wizard-subtitle}}</p>
<div class="wps-step-nav">

    <div class="wps-step-nav-col wps-step-nav-one wps-step-nav-updated wps-hide-mobile">
        <div class="wps-step-icon">1</div>
        <h2 class="wps-step-heading">{{what}}</h2>
        <p class="wps-step-desc" style="font-size: 16px;">{{step1}}</p>
    </div>

    <div class="wps-step-nav-col wps-step-nav-two wps-step-nav-updated wps-hide-mobile">
        <div class="wps-step-icon">2</div>
        <h2 class="wps-step-heading">{{how}}</h2>
        <p class="wps-step-desc">{{step2}}</p>
    </div>

    <div class="wps-step-nav-col wps-step-nav-two wps-step-nav-updated wps-hide-mobile">
        <div class="wps-step-icon">3</div>
        <h2 class="wps-step-heading">{{where}}</h2>
        <p id="wps-where-wizard" class="wps-step-desc">{{step3}}</p>
    </div>

    <div class="wps-step-nav-col wps-step-nav-three wps-step-nav-active wps-center-mobile">
        <div class="wps-step-icon">4</div>
        <h2 class="wps-step-heading">{{deploy}}</h2>
        <p class="wps-step-desc">{{deploy-desc}}</p>
    </div>
    
</div>
